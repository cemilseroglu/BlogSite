<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Blog - Jamihtee</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <script src="https://use.fontawesome.com/releases/v6.1.0/js/all.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap-5.1.3-dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light" id="mainNav">
        <div class="container px-4 px-lg-5">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Jamihtee.tk</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menü
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ms-auto py-4 py-lg-0">
                    @RenderSection("NaviBasliklar",false)
                    @RenderSection("NaviBasliklarHakkinda",false)
                    @RenderSection("NaviBasliklarLogin",false)
                    @RenderSection("NaviBasliklarUyelikAktivasyon",false)
                    @RenderSection("NaviBasliklarUyelikGiris",false)
                    @RenderSection("NaviBasliklarProfil",false)
                    @RenderSection("NaviBasliklarBloglar",false)
                    @RenderSection("NaviBasliklarBlogYaz",false)
                </ul>
            </div>
        </div>
    </nav>

    <!--Headerlarım...-->
    @RenderSection("siteHeading",false)
    @RenderSection("siteHeadingHakkinda",false)
    @RenderSection("siteHeadingLogin",false)
    @RenderSection("siteHeadingUyeOl",false)
    @RenderSection("siteHeadingUyelikAktivasyon",false)
    @RenderSection("siteHeadingUyelikGiris",false)
    @RenderSection("siteHeadingProfil",false)
    @RenderSection("siteHeadingBloglar",false)
    @RenderSection("siteHeadingBlogYaz",false)
    <div class="container w-100 m-auto">
        <div class="row justify-content-center w-100 m-auto">
            <div class="w-100 m-auto">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>
    <footer class="border-top">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <ul class="list-inline text-center">
                        <li class="list-inline-item">
                            <a href="https://www.github.com/cemilseroglu"  add a target="_blank">
                                <span class="fa-stack fa-lg">
                                    <i class="fas fa-circle fa-stack-2x"></i>
                                    <i class="fab fa-github fa-stack-1x fa-inverse"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                    <div class="small text-center text-muted fst-italic">Copyright Jamihtee.tk &copy;  Website 2022</div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/bootstrap-5.1.3-dist/js/bootstrap.min.js"></script>
    <script src="~/js/scripts.js"></script>

    @await RenderSectionAsync("Scripts", false)
</body>
</html>
